<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>

<HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2b2b2b; -fx-padding: 10;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.scriptagher.frontend.controller.HeaderBarController">
    <!-- Logo o icona -->
    <Circle fill="deepskyblue" radius="15" stroke="white" strokeWidth="2" />

    <!-- Titolo -->
    <Label fx:id="titleLabel" style="-fx-text-fill: white; -fx-font-size: 18;" text="Scriptagher" />

    <!-- Spaziatore -->
    <Region HBox.hgrow="ALWAYS" />

    <!-- Pulsanti -->
    <Button fx:id="minimizeButton" style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@/icons/icons8-macos-riduci-a-icona-32.png" />
                </image>
            </ImageView>
        </graphic>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <Button fx:id="maximizeButton" style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@/icons/icons8-circle-32.png" />
                </image>
            </ImageView>
        </graphic>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <Button fx:id="closeButton" style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@/icons/icons8-spegnere-32.png" />
                </image>
            </ImageView>
        </graphic>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</HBox>
