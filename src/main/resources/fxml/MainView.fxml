<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="700.0"
    xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.scriptagher.frontend.controller.MainViewController">
    <children>
        <BorderPane fx:id="mainPane" minHeight="500.0" minWidth="700.0">
            <top>
                <fx:include source="HeaderBar.fxml" />
            </top>
            <left>
                <AnchorPane fx:id="leftPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox focusTraversable="true" prefHeight="200.0" prefWidth="100.0"
                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label minWidth="200.0" text="Label">
                                    <padding>
                                        <Insets bottom="3.0" left="5.0" top="2.0" />
                                    </padding>
                                </Label>
                                <MenuButton contentDisplay="RIGHT" minHeight="50.0" minWidth="200.0"
                                    mnemonicParsing="false" popupSide="RIGHT" text="MenuButton">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Action 1" />
                                        <MenuItem mnemonicParsing="false" text="Action 2" />
                                    </items>
                                </MenuButton>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </left>
            <center>
                <TabPane fx:id="fullContent" nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="ALL_TABS"
                    BorderPane.alignment="CENTER">
                    <tabs>
                        <Tab text="first bot">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="423.0" prefWidth="468.0">
                                    <children>
                                        <VBox alignment="CENTER" spacing="10"
                                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Button onAction="#handleButtonClick" text="Click Me" />
                                                <Label fx:id="welcomeLabel" alignment="CENTER" text="Benvenuto in Scriptagher!" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>